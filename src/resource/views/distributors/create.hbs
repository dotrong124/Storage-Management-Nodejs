<div class="mt-4 ml-40 mr-40">
    <h2>Thêm nhà phân phối</h2>
    <form method="POST" action="/distributors/add">
      <div class="form-group">
        <label for="tendoitac">Tên nhà phân phối</label>
        <input type="text" class="form-control" id="tendoitac" name="tendoitac" placeholder="Tên nhà phân phối">
      </div>
      <div class="form-group">
        <label for="diachi">Địa chỉ</label>
        <input type="text" class="form-control" id="diachi" name="diachi" placeholder="Địa chỉ">
      </div>
      <div class="form-group">
        <label for="sdt">Số điện thoại</label>
        <input type="text" class="form-control" id="sdt" name="sdt" placeholder="Số điện thoại">
      </div>
      
      <div class="form-group">
        <label for="tensanpham">Tên sản phẩm phân phối</label>
        <textarea class="form-control" id="tensanpham" name="tensanpham"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Thêm</button>
    </form>
</div>

